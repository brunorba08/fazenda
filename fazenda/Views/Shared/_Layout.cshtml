<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fazenda</title>

    <!-- Estilos de CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fazenda.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

    <style>
        /* Garantir que o rodapé fique no final da página */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .main-content {
            flex: 1;
        }

        /* Estilos do rodapé */
        .fixed-footer {
            width: 100%;
            background-color: #f8f9fa; /* Cor do fundo do rodapé */
            border-top: 3px solid #006400; /* Borda verde escura */
            color: #212529;
            z-index: 10;
            text-align: center;
        }

            .fixed-footer a {
                color: #007bff; /* Cor dos links */
                text-decoration: none;
            }

                .fixed-footer a:hover {
                    text-decoration: underline;
                }

        .contact-text {
            font-size: 14px; /* Reduzir o tamanho da fonte */
            margin-bottom: 8px; /* Adicionar um pequeno espaçamento */
        }

        .fixed-footer p {
            margin: 2px 0; /* Reduzir o espaçamento entre os parágrafos */
        }
    </style>
</head>
<body>
    <header>
        <!-- Inclusão do menu top (usando o partial) -->
        @Html.Partial("_TopMenu")
    </header>

    <div class="main-content">
        <div class="container">
            <main role="main" class="pb-3">
                <!-- Aqui será renderizado o conteúdo de cada página -->
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Rodapé -->
    <footer class="footer fixed-footer">
        <div class="container text-center py-3">
            <p class="mb-1">&copy; 2024 - Fazenda Green City</p>
            <p class="contact-text">Alguma dúvida? Entre em contato conosco em algum desses meios:</p>
            <p class="mb-1">Telefone: (11) 98765-4321 | CNPJ: 12.345.678/0001-90| E-mail: <a href="mailto:contato@greencity.com.br">contato@greencity.com.br</a></p>
            <p class="mb-1">Endereço: Rua das Flores, 123, Bairro Jardim das Plantas, Cidade Verde</p>
        </div>
    </footer>

    <!-- Scripts JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Scripts específicos da página -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
