@model fazenda.Models.User

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f1f1f1;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            display: flex;
            justify-content: space-between;
            background-color: #fff;
            border-radius: 10px;
            width: 90%;
            max-width: 600px;
            padding: 15px;
        }

        .form-box {
            width: 100%;
        }

        h3 {
            margin-bottom: 15px;
            color: #333;
            font-size: 20px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #333;
        }

        input[type="email"],
        input[type="password"],
        input[type="text"],
        input[type="tel"] {
            width: 100%;
            padding: 8px;
            margin: 8px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            font-size: 14px;
        }

        button[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 14px;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #45a049;
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-box">
            <h3>Cadastro</h3>
            <form method="post">
                <div>
                    <label asp-for="Name">Nome:</label>
                    <input asp-for="Name" type="text" placeholder="Digite o nome" />
                </div>
                <div>
                    <label asp-for="CPF">CPF:</label>
                    <input asp-for="CPF" type="text" placeholder="Digite o CPF" />
                </div>
                <div>
                    <label asp-for="Email">E-mail:</label>
                    <input asp-for="Email" type="email" placeholder="Digite seu e-mail" />
                </div>
                <div>
                    <label asp-for="Telefone">Telefone:</label>
                    <input asp-for="Telefone" type="tel" placeholder="Digite seu telefone" />
                </div>
                <div>
                    <label asp-for="Password">Senha:</label>
                    <input asp-for="Password" type="password" placeholder="Digite sua senha" />
                </div>
                <div>
                    <label asp-for="ConfirmPassword">Confirmar Senha:</label>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirme sua senha" />
                </div>
                <button type="submit">Cadastrar</button>
            </form>
        </div>
    </div>

    <div class="checkbox-box">
        <h3>AUTORIZO RECEBER OFERTAS E NOVIDADES POR</h3>
        <div class="checkbox-item">
            <input type="checkbox" id="email" />
            <label for="email">E-mail</label>
        </div>
        <div class="checkbox-item">
            <input type="checkbox" id="sms" />
            <label for="sms">SMS</label>
        </div>
        <div class="checkbox-item">
            <input type="checkbox" id="whatsapp" />
            <label for="whatsapp">WhatsApp</label>
        </div>
        <div class="checkbox-item">
            <input type="checkbox" id="termos" />
            <label for="termos">
                Aceito os Termos e Condições de Uso do Site e App e a Politica de Privacidade.
                Participe do Cliente Bem Querer e garanta beneficios exclusivos em loja física e online
            </label>
        </div>
        <div class="checkbox-item">
            <input type="checkbox" id="privacidade" />
            <label for="privacidade">
                Aceito o Regulamento do Cliente Bem Querer e passo a fazer parte do programa de vantagens do fgc. Saiba mais
            </label>
        </div>
    </div>
    </div>
</body>
</html>
