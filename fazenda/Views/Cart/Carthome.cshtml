@model List<fazenda.Models.CartItem>

    @{
    ViewData["Title"] = "Carrinho de Compras";
    }

    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
        <style>
            .modal {
                display: none;
                position: fixed;
                z-index: 1000;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                padding-top: 50px;
            }

            .modal-content {
                background-color: #28a745;
                margin: auto;
                padding: 20px;
                border-radius: 10px;
                width: 35%;
                color: white;
            }

            .close {
                color: white;
                font-size: 28px;
                font-weight: bold;
                position: absolute;
                top: 10px;
                right: 20px;
                cursor: pointer;
            }

                .close:hover {
                    color: #ddd;
                }

            .table {
                color: #fff;
                margin-top: 20px;
            }

            .btn-sm {
                padding: 5px 10px;
            }

            .btn-danger {
                background-color: #dc3545;
                border-color: #dc3545;
            }

                .btn-danger:hover {
                    background-color: #c82333;
                    border-color: #bd2130;
                }
        </style>
    </head>

    <div>
        <h4>Carrinho de Compras</h4>

        @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

        @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Preço</th>
                    <th>Quantidade</th>
                    <th>Total</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>R$ @item.Price.ToString("F2")</td>
                    <td>@item.Quantity</td>
                    <td>R$ @(item.Price * item.Quantity).ToString("F2")</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="productName" value="@item.Name" />
                            <button type="submit" class="btn btn-sm btn-danger">Remover</button>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Seu carrinho está vazio.</p>
    }

        <div class="d-flex justify-content-between">
            <a href="/Checkout" class="btn btn-primary">Finalizar Compra</a>
            <form asp-action="ClearCart" method="post">
                <button class="btn btn-danger">Limpar Carrinho</button>
            </form>
        </div>
    </div>

    <button id="cartButton" class="btn btn-success">
        <i class="bi bi-cart"></i> Carrinho
    </button>

    <script>
    const cartModal = document.getElementById("cartModal");
    const closeModal = document.getElementById("closeModal");
    const cartButton = document.getElementById("cartButton");

    cartButton.onclick = function () {
        cartModal.style.display = "block";
        document.body.style.overflow = "hidden";
    }

    closeModal.onclick = function () {
        cartModal.style.display = "none";
        document.body.style.overflow = "auto";
    }

    window.onclick = function(event) {
        if (event.target == cartModal) {
            cartModal.style.display = "none";
            document.body.style.overflow = "auto";
        }
    };
    </script>
